<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="lightlevel"
            type="Integer" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_light_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_light_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <Button
            android:id="@+id/btn_light_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seekbar_light"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:progress="@{lightlevel}"
            android:progressDrawable="@drawable/light_progress"
            app:layout_constraintLeft_toLeftOf="@id/btn_light_min"
            app:layout_constraintRight_toRightOf="@id/btn_light_max"
            app:layout_constraintTop_toBottomOf="@id/btn_light_auto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>